pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Cloning the repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile in the repository
                    sh 'docker build -t prathikm/image .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Docker Hub credentials stored in Jenkins credentials
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u ${prathikm} -p ${Prathik007}"

                        // Push the Docker image to Docker Hub
                        sh 'docker push prathikm/image'
                    }
                }
            }
        }
    }

}
