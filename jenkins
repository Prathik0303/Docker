pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Cloning the repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Change to the directory where the Dockerfile is located
                    dir('path/to/dockerfile') {
                        // Build the Docker image
                        sh 'docker build -t prathikm/image .'
                    }
                }
            }
        }

        stage('Build with Maven') {
            steps {
                script {
                    // Change to the directory where your Maven project is located
                    dir('path/to/maven/project') {
                        // Build your Maven project
                        sh 'mvn clean package'
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Docker Hub credentials stored in Jenkins credentials
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u ${prathikm} -p ${Prathik007}"

                        // Push the Docker image to Docker Hub
                        sh 'docker push prathikm/image'
                    }
                }
            }
        }
    }
}
