pipeline {
    agent any

stages {
        stage('Checkout') {
            steps {
                // Use the HTTPS URL for the Git repository
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/Prathik0303/Docker.git']]])
            }
        }
        // Other stages of your pipeline
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh "docker build -t your-dockerhub-username/your-image-name ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    sh "docker push your-dockerhub-username/your-image-name"
                }
            }
        }
    }
}
