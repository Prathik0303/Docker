pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Cloning the repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Change to the directory where the Dockerfile is located
                    dir('path/to/dockerfile') {
                        // Build the Docker image
                        sh 'docker build -t my-docker-image .'
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Docker Hub credentials stored in Jenkins credentials
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u ${DOCKERHUB_USERNAME} -p ${DOCKERHUB_PASSWORD}"

                        // Push the Docker image to Docker Hub
                        sh 'docker push my-docker-image'
                    }
                }
            }
        }
    }

}
